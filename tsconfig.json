{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": ".",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@nuxt/types", "@types/node"],
    "jsx": "preserve",
    "paths": {
      "@/*": ["./*"] 
    },
  },
  "exclude": ["node_modules", ".nuxt", "dist", "tailwind.config.js", "postcss.config.js"]
}
